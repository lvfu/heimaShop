page {
  height: 100%;
}
.index_category {
  height: calc(100vh - 90rpx);
  display: flex;
}
.index_category .left_scroll {
  flex: 2;
  /*选中的样式*/
}
.index_category .left_scroll .left_menu_item {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.index_category .left_scroll .active {
  color: var(--themeColor);
  border-left: 5px solid currentColor;
}
.index_category .right_scroll {
  flex: 5;
}
.index_category .right_scroll .right_menu_item .right_menu_item_title {
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: center;
}
.index_category .right_scroll .right_menu_item .right_menu_item_title .delimiter {
  padding: 0 10rpx;
}
.index_category .right_scroll .right_menu_item .right_menu_item_content {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
}
.index_category .right_scroll .right_menu_item .right_menu_item_content navigator {
  width: 33.33%;
  text-align: center;
  padding: 10rpx 0;
}
.index_category .right_scroll .right_menu_item .right_menu_item_content navigator image {
  width: 50%;
}
