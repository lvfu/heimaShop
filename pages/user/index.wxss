Page {
  background-color: #e1e1e1;
  padding-bottom: 50rpx;
}
.top_userinfo_group {
  height: 45vh;
}
.top_userinfo_group .nologin_group {
  background-color: var(--themeColor);
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top_userinfo_group .nologin_group navigator .tologin {
  color: white;
  font-weight: 400;
  border: 2px solid white;
  border-radius: 10rpx;
  padding: 20rpx 50rpx;
}
.top_userinfo_group .login_group {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.top_userinfo_group .login_group .user_bg_big {
  height: 45vh;
  filter: blur(5rpx);
}
.top_userinfo_group .login_group .userinfo_group {
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.top_userinfo_group .login_group .userinfo_group image {
  width: 24%;
  border-radius: 50%;
}
.top_userinfo_group .login_group .userinfo_group .userinfo_nickname {
  color: white;
  font-size: 27rpx;
  margin-top: 70rpx;
}
.menu_top_group {
  margin-top: -50rpx;
  background-color: white;
  position: relative;
  width: 90%;
  left: 5%;
  height: 100rpx;
  border-radius: 5rpx;
}
.menu_top_group .menu_top_main {
  display: flex;
  height: 100%;
}
.menu_top_group .menu_top_main .menu_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.menu_top_group .menu_top_main .menu_item .menu_num {
  color: var(--themeColor);
}
.menu_order_group {
  background-color: white;
  width: 90%;
  margin-left: 5%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.menu_order_group .menu_order_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #e9e9e9;
}
.menu_order_group .menu_order_main {
  display: flex;
  padding: 20rpx;
}
.menu_order_group .menu_order_main .menu_order_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.menu_order_group .menu_order_main .menu_order_item .iconfont {
  color: var(--themeColor);
}
.menu_order_group .menu_order_main .menu_order_item .order_title {
  margin-top: 10rpx;
}
.menu_addr_group {
  width: 90%;
  margin-left: 5%;
  background-color: white;
  padding: 20rpx;
}
.menu_other_group {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.menu_other_group .menu_addr_group {
  width: 90%;
  margin-left: 5%;
  background-color: white;
  padding: 20rpx;
  border-bottom: 1px solid #e9e9e9;
}
